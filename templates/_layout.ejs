<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#000000">
    <meta name="description" content="" >
    <meta name="color-scheme" content="light dark">

    <title><%= typeof title !== 'undefined' ? `${title} - TypeScript Fastify` : 'TypeScript Fastify' %></title>

    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">

    <link rel="stylesheet" href="/css/bootstrap.css?v=1">
    <link rel="stylesheet" href="/css/main.css?v=1">
  </head>
  <body>
    <header class="header py-2 pe-3 d-flex align-items-center justify-content-between">
      <div class="container-xl d-flex align-items-center gap-5">
        <%- include('./_partials/logo.ejs') %>

        <nav class="d-none d-lg-flex align-items-center gap-2 main-nav">
          <% for (const navItem of mainNav) { %>
            <a href="<%=navItem.url%>" is="nav-link" class="main-nav-button <% if (typeof mainNavId !== 'undefined' && mainNavId === navItem.id) { %>selected<% } %>">
              <%=navItem.label%>
            </a>
            <% } %>
          </nav>
        </div>

        <mobile-menu-button></mobile-menu-button>
    </header>

    <main class="flex-grow-1 py-4 container">
      <%- body %>
    </main>

    <footer class="footer py-5">
      <div class="container d-flex flex-column flex-xl-row justify-content-xl-between align-items-xl-center gap-4">
        <%- include('./_partials/logo.ejs') %>

        <div class="d-flex flex-column flex-md-row gap-2 gap-md-4">
          <a href="/" class="js-track-footer-menu-click-event">Home</a>
          <a href="/imprint/" class="js-track-footer-menu-click-event">Imprint</a>
          <a href="/privacy-statement/" class="js-track-footer-menu-click-event">Privacy Statement</a>
          <a href="/about/" class="js-track-footer-menu-click-event">About TypeScript Fastify</a>
          <a href="/contact/" class="js-track-footer-menu-click-event">Contact</a>
        </div>

        <div class="text-xl-end">
          &copy; <a href="https://www.alexseifert.com" class="js-track-click-event" target="_blank">Alex Seifert</a> 2024
        </div>
      </div>
    </footer>

    <div class="d-lg-none mobile-menu-container" id="mobileMenu">
      <nav class="mobile-menu">
        <% for (const navItem of mainNav) { %>
          <a href="<%=navItem.url%>" class="mobile-nav-button js-track-mobile-menu-click-event <% if (typeof mainNavId !== 'undefined' && mainNavId === navItem.id) { %>selected<% } %>"><%=navItem.label%></a>
        <% } %>
      </nav>
    </div>

    <to-the-top></to-the-top>

    <dialog is="cookie-banner" class="text-center" id="cookieBanner">
      Cookies only are used for analytics.

      <div class="d-flex gap-3 mt-4 justify-content-center">
        <button class="button" id="cookieBannerOnlyNecessaryButton">Only Necessary</button>
        <button class="button primary" id="cookieBannerAcceptAllButton">Accept All</button>
      </div>
    </dialog>

    <script defer src="/scripts/web-components/index.js?v=1" type="module"></script>
  </body>
</html>
